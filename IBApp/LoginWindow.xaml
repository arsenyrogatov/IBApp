<Window x:Class="IBApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IBApp"
        mc:Ignorable="d"
        Title="Вход в систему" Height="160" Width="280" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="10,5,10,0">
            <Label Content="Введите имя"></Label>
            <TextBox x:Name="login_TextBox"></TextBox>
            <Label Content="Введите пароль"></Label>
            <PasswordBox x:Name="password_TextBox"></PasswordBox>
            <StackPanel Orientation="Horizontal" Margin="0,5,0,0" HorizontalAlignment="Right">
                <Button x:Name="OK_Button" Content="OK" Width="50" Margin="0,0,5,0"></Button>
                <Button x:Name="cancel_Button" Content="Отмена" Width="50" Click="cancel_Button_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
