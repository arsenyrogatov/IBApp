<Window x:Class="IBApp.NewPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IBApp"
        mc:Ignorable="d"
        Title="Смена пароля" Height="190" Width="280" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="10,5,10,0">
            <Label Content="Старый пароль"></Label>
            <TextBox></TextBox>
            <Label Content="Новый пароль"></Label>
            <TextBox></TextBox>
            <Label Content="Подтверждение"></Label>
            <TextBox></TextBox>
            <StackPanel Orientation="Horizontal" Margin="0,5,0,0" HorizontalAlignment="Right">
                <Button Content="OK" Width="50" Margin="0,0,5,0"></Button>
                <Button Content="Отмена" Width="50"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
